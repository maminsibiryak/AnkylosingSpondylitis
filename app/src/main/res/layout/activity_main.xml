<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/aboutTheDiseaseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="goToTheDescriptionOfTheDisease"
                android:text="О Болезни Бехтерева" />

            <Button
                android:id="@+id/treatmentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="goToTreatment"
                android:text="Лечение" />

            <Button
                android:id="@+id/causesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="goToTheCauses"
                android:text="Причины" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/symptomsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="goToTheSymptoms"
                android:text="симптомы" />

            <Button
                android:id="@+id/physiotherapyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="goToThePhisiotherapy"
                android:text="ЛФК" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/firstSignsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="goToTheFirstSigns"
                android:text="Первые признаки" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>
</android.support.constraint.ConstraintLayout>